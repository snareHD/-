#define _CRT_SECURE_NO_WARNINGS 1
//welcome to china!!!
#include<stdio.h>
#include<string.h>
int main()
{
	char arr1[] = "welcome to china!!!";
	char arr2[] = "###################";
	printf("%d\n%d\n", strlen(arr1), strlen(arr2));
	printf(" % s\n", arr2);
	int left = 0;
	int right = strlen(arr1) - 1;
	while (left <= right)
	{
		
		arr2[left] = arr1[left];
		arr2[right] = arr1[right];
		printf(" % s\n", arr2);
		left++;
		right--;
	
		if (left > right)
		{
			break;
		}
	
	}
	
	return 0;
}
